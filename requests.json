{
  "variables": {
    "baseUrl": "www.localhost.com",
    "port": "8080"
  },
  "before": [
    {
      "name": "test 1",
      "request": {
        "method": "GET",
        "url": "http://localhost:8080/"
      },
      "expect": {
        "statusCode": 200,
        "assertions": {
          "persons[0] firstname": "John"
        }
      },
      "keep": [
        {
          "variable_name": "name",
          "path": "persons[0] lastname"
        }
      ]
    }
  ],
  "test_sets": [
    {
      "name": "test set 1",
      "retries": 1,
      "tests": [
        {
          "name": "test 1",
          "request": {
            "method": "GET",
            "url": "http://localhost:8080/"
          },
          "expect": {
            "statusCode": 202
          },
          "keep": [
            {
              "variable_name": "loc",
              "path": "host"
            }
          ]
        },
        {
          "name": "test 2",
          "request": {
            "method": "POST",
            "url": "http://localhost:8080/"
          },
          "expect": {
            "statusCode": 201
          }
        }
      ]
    },
    {
      "name": "test set 2",
      "retries": 1,
      "tests": [
        {
          "name": "test 1",
          "request": {
            "method": "PUT",
            "url": "http://${loc}:8080/",
            "body": "{\"name\": \"${name}\",\"id\": \"1\"}",
            "header": {
              "customHeader": "customValue",
              "customHeaderb": "dfd${loc}fdfd"
            }
          },
          "expect": {
            "statusCode": 202,
            "assertions": {
              "name": "dimitris"
            }
          },
          "keep": [
            {
              "variable_name": "myval",
              "path": "name"
            }
          ]
        }
      ]
    }
  ],
  "after": [
    {
      "name": "test 1",
      "request": {
        "method": "GET",
        "url": "http://localhost:8080/"
      },
      "expect": {
        "statusCode": 201
      }
    }
  ]
}